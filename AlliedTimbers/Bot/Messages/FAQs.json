{
  "$schema": "https://nuget.mugonat.com/content/botengine/schemas/v2/schema.json",
  "faqs": {
    "type": "parent",
    "children": {
      "index": {
        "type": "list",
        "trigger": "faqs",
        "onGenerate": "FxDisplayFaqs",
        "message": {
          "title": "Frequently Asked Questions",
          "caption": "",
          "button": "View FAQ",
          "sections": []
        },
        "response": {
          "any": "faqs"
        }
      },
      "details": {
        "type": "buttons/original",
        "trigger": "faq \\d+",
        "onGenerate": "FxShowFaq",
        "message": "",
        "response": {
          "Products" : "product",
          "Faqs": "faqs",
          "Search": "search",
          "Branches": "branches"
        }
      },
      "search": {
        "type": "text",
        "trigger": "search",
        "message": "Enter the question you would like to ask the Money Mart team",
        "response": {
          "any": "answer"
        }
      },
      
      "answer": {
        "type": "list",
        "onGenerate": "FxFaqSearchResult",
        "message": {
          "title": "Search Complete",
          "caption": "",
          "button": "Menu",
          "sections": []
        }
      }
    }
  }
}